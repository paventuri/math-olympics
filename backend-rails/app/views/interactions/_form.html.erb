<%= simple_form_for @interaction, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :stem %>
  <%= f.input :stimulus %>
  <%= f.input :correct_answer_id_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                interactions_path, :class => 'btn' %>
  </div>
<% end %>
