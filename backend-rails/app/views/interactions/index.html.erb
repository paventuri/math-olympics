<%- model_class = Interaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:stem) %></th>
      <th><%= model_class.human_attribute_name(:stimulus) %></th>
      <th><%= model_class.human_attribute_name(:correct_answer_id_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= link_to interaction.id, interaction_path(interaction) %></td>
        <td><%= interaction.stem %></td>
        <td><%= interaction.stimulus %></td>
        <td><%= interaction.correct_answer_id_id %></td>
        <td><%=l interaction.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interaction_path(interaction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interaction_path(interaction),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interaction_path,
            :class => 'btn btn-primary' %>
