<%- model_class = Interaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:stem) %>:</strong></dt>
  <dd><%= @interaction.stem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stimulus) %>:</strong></dt>
  <dd><%= @interaction.stimulus %></dd>
  <dt><strong><%= model_class.human_attribute_name(:correct_answer_id_id) %>:</strong></dt>
  <dd><%= @interaction.correct_answer_id_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              interactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_interaction_path(@interaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              interaction_path(@interaction),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
